<!--index.wxml-->
<view class="container">
  <view class="logo">
    <image class="logo-img" mode="widthFix" src="../../static/img/logo.png" />
    <view class="desc">
      <text class="desc-row">北京顺丰同城科技有限公司的FE与UX部门</text>
      <text class="desc-row">联手打造的小程序基础控件库</text>
    </view>
  </view>
  <view wx:for="{{list}}" wx:key="{{index}}" class="block">
    <view class="title">{{item.title}}</view>
    <view class="components">
      <view bindtap="jump" data-page="{{item.components[i]}}" wx:for="{{item.components}}" wx:for-item="c" wx:for-index="i" wx:key="{{i}}" class="components-row">
        <image mode="widthFix" src="../../static/img/{{c.icon}}" class="components-row-icon" />
        <text class="components-row-name">{{c.name}}</text>
        <image mode="widthFix" src="data:image/svg+xml;base64," class="components-row-right" />
      </view>
    </view>
  </view>
</view>
